[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv
ignore =
    # E203: whitespace before ':'
    E203,
    # E266: too many leading '#' for block comment
    E266,
    # E501: line too long
    E501,
    # W503: line break before binary operator
    W503
per-file-ignores =
    # imported but unused
    __init__.py: F401
max-complexity = 10